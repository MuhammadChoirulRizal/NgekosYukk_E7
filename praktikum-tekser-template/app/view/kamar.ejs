<%- include('partials/header', { title: 'Daftar Kamar' }) %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="bi bi-door-closed text-primary"></i> Daftar Semua Kamar
    </h2>
    <a href="/kamar/tambah" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Tambah Kamar
    </a>
</div>

<% if (kamar.length > 0) { %>
    <div class="row">
        <% kamar.forEach(k => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header 
                        <%= k.status_kamar === 'tersedia' ? 'bg-success' : '' %>
                        <%= k.status_kamar === 'terisi' ? 'bg-danger' : '' %>
                        <%= k.status_kamar === 'maintenance' ? 'bg-warning' : '' %> 
                        text-white">
                        <h5 class="card-title mb-0">
                            <%= k.jenis_kamar %> 
                            <span class="badge bg-light text-dark float-end">#<%= k.id_kamar %></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <i class="bi bi-info-circle"></i> 
                            <%= k.deskripsi || 'Tidak ada deskripsi' %>
                        </p>
                        <hr>
                        <div class="mb-2">
                            <strong><i class="bi bi-currency-dollar"></i> Harga:</strong><br>
                            <span class="fs-5 text-primary">Rp <%= k.harga.toLocaleString('id-ID') %></span>
                            <small class="text-muted">/bulan</small>
                        </div>
                        <div class="mb-3">
                            <strong><i class="bi bi-person"></i> Penyewa:</strong><br>
                            <%= k.nama_penyewa ? k.nama_penyewa : 'Belum ada penyewa' %>
                        </div>
                        <div